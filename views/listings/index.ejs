<% layout("/layouts/boilerplate") %>
<style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        /* justify-content: space-around; */
        margin-bottom: 20px;
        align-items: center;
    }
    .filter {
        text-align: center;
        margin-left: 2rem;
        margin-top: 2rem;
        
        opacity: 0.7;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .tax-info{
        display: none;
    }
    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        padding: 0.5rem 1rem;
        height: 2.8rem;
        margin-left: 5rem;
        display: flex;
        align-items: center;

    }
    
   
</style>
<body>
    
